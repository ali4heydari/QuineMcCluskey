                        <Button Grid.Row="3" Grid.Column="2" Margin="2"></Button>
                        <Button Grid.Row="0" Grid.Column="3" Margin="2"></Button>
                        <Button Grid.Row="1" Grid.Column="3" Margin="2"></Button>
                        <Button Grid.Row="2" Grid.Column="3" Margin="2"></Button>
                        <Button Grid.Row="3" Grid.Column="3" Margin="2"></Button>
                    </Grid>
                </Grid>
                <StatusBar Grid.Row="1" MinHeight="20"/>
            </Grid>
        </Grid>
        
    </Grid>
</Window>
